<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following_users" class="stat">
      <%= @user.following_users.count %>
    </strong>
    following
  </a>
  , 
  <a href="<%= followers_user_path(@user) %>">
    <strong id="follower_users" class="stat">
      <%= @user.follower_users.count %>
    </strong>
    followers
  </a>
   and 
  <a href="<%= liked_posts_user_path(@user) %>">
    <strong id="liked_posts" class="stat">
      <%= @user.likes.count %>
    </strong>
    liked posts
  </a>
</div>