<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <%= render 'shared/stats' %>
    
  </aside>
  <div class="col-md-8">
      <h3><%= @favoritposts.count %> likes</h3>
      <ol class="microposts">
        <% @favoritposts.each do |favorite| %>
          <%= render partial: 'microposts/micropost', locals: { micropost: favorite } %>
        <% end %>
      </ol>
  </div>
</div>